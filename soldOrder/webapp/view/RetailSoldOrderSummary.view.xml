<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:t="sap.ui.table"
	controllerName="toyota.ca.SoldOrder.controller.RetailSoldOrderSummary" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page>
				<customHeader>
					<Bar class="sapUiSmallPaddingBeginEnd clCustomHeaderBg">
						<contentLeft>
							<Image id="idLexusLogo" src="images/Lexus_EN.png" width="100px"/>
							<Text text="|" class="sapUiTinyMarginBeginEnd"/>
							<Text class="clCustomFont" text="{i18n>PageTitle}"/>
						</contentLeft>
						<contentRight>
							<Text text="{i18n>soldOrder}" class="sapUiTinyMarginBeginEnd"></Text>
							<Text text="{i18n>priceProtection}" class="sapUiTinyMarginBeginEnd"></Text>
							<!--	<Text text="{i18n>summary}" class="sapUiTinyMarginBeginEnd"></Text>-->
						</contentRight>
					</Bar>
				</customHeader>
				<content>
					<VBox>
						<items>
							<Label id="label_SoldOrderSummaryid" text="{i18n>retailSoldOrderSummary}" class="sapUiTinyMarginTop
								sapUiTinyMarginBegin sapUiTinyMarginBottom  fontsize"></Label>
							<HBox class="marginCorners VBox_color">
								<items>
									<Label text="{i18n>series}" class="sapUiSmallMarginTop sapUiTinyMarginEnd TableLabel"></Label>
									<ComboBox selectionChange="_refresh" items="{ path: '/ProductCollection', sorter: { path: 'reason' } }" required="true" class="sapUiMediumMarginEnd">
										<core:Item key="{ProductId}" text="{Name}"/>
									</ComboBox>
									<Label text="{i18n>soldOrderStatus}" class="sapUiSmallMarginTop sapUiTinyMarginEnd TableLabel"></Label>
									<MultiComboBox selectionChange="_refresh"  items="{ path: '/ProductCollection', sorter: { path: 'reason' } }" required="true" class="sapUiMediumMarginEnd">
										<core:Item key="{ProductId}" text="{Name}"/>
									</MultiComboBox>
									<Label text="{i18n>auditStatus}" class="sapUiSmallMarginTop sapUiTinyMarginEnd TableLabel"></Label>
									<ComboBox selectionChange="_refresh" items="{ path: '/ProductCollection', sorter: { path: 'reason' } }" required="true" class="sapUiMediumMarginEnd">
										<core:Item key="{ProductId}" text="{Name}"/>
									</ComboBox>
									<Label text="{i18n>dealer}" class="sapUiSmallMarginTop sapUiTinyMarginEnd TableLabel"></Label>
									<MultiComboBox selectionChange="_refresh" items="{ path: '/ProductCollection', sorter: { path: 'WeightMeasure' } }" required="true">
										<core:Item key="{ProductId}" text="{parts: [{path:'Name'},{path:'WeightMeasure'}] , formatter: 'toyota.ca.SoldOrder.util.formatter.formatDealer'}"/>
									</MultiComboBox>
								</items>
							</HBox>
							<Button text="{i18n>new}" class="cssShift marginCornersRight marginCornersBottom" press="_createNewOrder"></Button>
							<t:Table selectionMode="None" rows="{/ProductCollection}" enableColumnReordering="false" alternateRowColors="true"
						enableColumnFreeze="false" visibleRowCount="10" class="marginCorners">
								<t:columns>
									
									<t:Column width="11.11%" resizable="false" >
										<Label text="{i18n>orderNum}" class="TableLabel"/>
										<t:template>
										<Text text="{Category}" wrapping="true"/>
										</t:template>
									</t:Column>
									<t:Column width="11.11%" resizable="false" >
										<Label text="{i18n>dealer}" class="TableLabel"/>
										<t:template>
											<Text text="{parts: [{path:'/Products/0/Name'},{path:'/Products/0/Name'}] , formatter: 'toyota.ca.SoldOrder.util.formatter.formatDealer'}" wrapping="true"/>
										</t:template>
									</t:Column>
									<t:Column width="11.11%" resizable="false" >
										<Label text="{i18n>modelYear}" class="TableLabel"/>
										<t:template>
											<Text text="{Category}" wrapping="true"/>
										</t:template>
									</t:Column>
									<t:Column width="11.11%" sortProperty="Category" resizable="false" >
										<Label text="{i18n>series}"  class="TableLabel"/>
										<t:template>
											<Text text="{Category}" wrapping="true"/>
										</t:template>
									</t:Column>
										<t:Column width="11.11%" sortProperty="Category" resizable="false" >
										<Label text="{i18n>model}" class="TableLabel"/>
										<t:template>
											<Text text="{parts: [{path:'/Products/0/Name'},{path:'/Products/0/Name'}] , formatter: 'toyota.ca.SoldOrder.util.formatter.formatModel'}" wrapping="true"/>
										</t:template>
									</t:Column >
										<t:Column width="11.11%" sortProperty="Category" resizable="false" >
										<Label text="{i18n>suffix}" class="TableLabel"/>
										<t:template>
											<Text text="{parts: [{path:'/Products/0/Name'},{path:'/Products/0/Name'}] , formatter: 'toyota.ca.SoldOrder.util.formatter.formatSuffix'}" wrapping="true"/>
										</t:template>
									</t:Column>
										<t:Column width="11.11%" sortProperty="Category" resizable="false" >
										<Label text="{i18n>status}" class="TableLabel"/>
										<t:template>
											<Text text="{Category}" wrapping="true"/>
										</t:template>
									</t:Column>
									<t:Column width="11.11%" resizable="false" >
										<Label text="{i18n>vehicleTrackingNumber}" class="TableLabel"/>
										<t:template>
											<Text text="{Category}" wrapping="true"/>
										</t:template>
									</t:Column>
									<t:Column width="11.11%" resizable="false" >
										<Label text="{i18n>linkVehicle}" class="TableLabel"/>
										<t:template>
											<Button id="btn_linkVeh_RSOS" visible="false" text="{i18n>linkVehicle}" press="onLinkVehicle" />
										</t:template>
									</t:Column>
								</t:columns>
							</t:Table>
						</items>
					</VBox>
					<Dialog draggable="true"  id="VTNDialog" title='Search Vehicle By VTN/VIN' contentWidth="400px" contentHeight="260px">
						<content>
							<VBox>
								<items>
									<HBox class="justifyContentCenter">
										<items>
											<Label text="{i18n>vtn}" class="sapUiSmallMarginBegin sapUiSmallMarginTop sapUiSmallMarginEnd"></Label>
											<Input id="vtin_RSOS"></Input>
										</items>
									</HBox>
									<HBox class="justifyContentCenter">
										<items>
									<Label text="{i18n>or}"></Label>
										</items>
									</HBox>
									<HBox class="justifyContentCenter">
										<items>
											<Label text="{i18n>vin}" class="sapUiSmallMarginBegin sapUiSmallMarginTop sapUiSmallMarginEnd "></Label>
											<Input id="vin_RSOS" ></Input>
										</items>
									</HBox>
									<HBox class="justifyContentCenter">
										<items>
											<Button text="{i18n>searchLink}" press="_searchNLink" ></Button>
										</items>
									</HBox>
								</items>
							</VBox>
						</content>
						<beginButton>
							<Button text="{i18n>Close}" press="closeDialog"></Button>
						</beginButton>
					</Dialog>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>