<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:t="sap.ui.table"
	controllerName="toyota.ca.SoldOrder.controller.FleetSoldOrderDetails" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page>
				<customHeader>
					<Bar class="sapUiSmallPaddingBeginEnd clCustomHeaderBg">
						<contentLeft>
							<Image id="idLexusLogo" src="images/Lexus_EN.png" width="100px"/>
							<Text text="|" class="sapUiTinyMarginBeginEnd"/>
							<Text class="clCustomFont" text="{i18n>PageTitle}"/>
						</contentLeft>
						<contentRight>
							<Text text="{i18n>soldOrder}" class="sapUiTinyMarginBeginEnd"></Text>
							<Text text="{i18n>priceProtection}" class="sapUiTinyMarginBeginEnd"></Text>
							<!--	<Text text="{i18n>summary}" class="sapUiTinyMarginBeginEnd"></Text>-->
						</contentRight>
					</Bar>
				</customHeader>
				<content>
					<VBox class="">
						<items>
							<Label id="label_FleetSoldOrderDetalsid" text="{i18n>fleetSoldOrderDetails}" 
							class="sapUiTinyMarginTop sapUiTinyMarginBegin sapUiTinyMarginBottom fontsize"></Label>
							<HBox class="marginCorners VBox_color">
								<items>
									<Label text="{i18n>status}" class="sapUiSmallMarginTop sapUiTinyMarginEnd TableLabel"></Label>
									<ComboBox items="{ path: '/FSODetails_Status', sorter: { path: 'key' } }" required="true" class="sapUiMediumMarginEnd">
										<core:Item key="{key}" text="{text}"/>
									</ComboBox>
									<Label text="{i18n>OrderType}" class="sapUiSmallMarginTop sapUiTinyMarginEnd TableLabel"></Label>
										<ComboBox items="{ path: '/FSODetail_OrderType', sorter: { path: 'key' } }" required="true" class="sapUiMediumMarginEnd">
										<core:Item key="{key}" text="{text}"/>
									</ComboBox>
									<Label text="{i18n>auditStatus}" class="sapUiSmallMarginTop sapUiTinyMarginEnd TableLabel"></Label>
										<ComboBox items="{ path: '/FSODetail_AuditStatus', sorter: { path: 'key' } }" required="true" class="sapUiMediumMarginEnd">
										<core:Item key="{key}" text="{text}"/>
									</ComboBox>
									<Label text="{i18n>series}" class="sapUiSmallMarginTop sapUiTinyMarginEnd TableLabel"></Label>
										<ComboBox items="{ path: '/', sorter: { path: 'key' } }" required="true" class="sapUiMediumMarginEnd">
										<core:Item key="{key}" text="{text}"/>
									</ComboBox>
									<Label text="{i18n>dealer}" class="sapUiSmallMarginTop sapUiTinyMarginEnd TableLabel"></Label>
										<ComboBox items="{ path: '/', sorter: { path: 'key' } }" required="true" class="sapUiMediumMarginEnd">
										<core:Item key="{key}" text="{text}"/>
									</ComboBox>
								</items>
							</HBox>
							<t:Table selectionMode="None" rows="{/ProductCollection}" enableColumnReordering="false" alternateRowColors="true"
								enableColumnFreeze="false" class="marginCorners">
								<t:columns>
									<t:Column>
										<Label text="{i18n>orderNum}" class="TableLabel"/>
										<t:template>
											<Text text="{Category}"/>
										</t:template>
									</t:Column>
									<t:Column>
										<Label text="{i18n>dealer}" class="TableLabel"/>
										<t:template>
											<Text text="{Category}"/>
										</t:template>
									</t:Column>
									<t:Column>
										<Label text="{i18n>model}" class="TableLabel"/>
										<t:template>
											<Text text="{Category}"/>
										</t:template>
									</t:Column>
									<t:Column>
										<Label text="{i18n>Suffix}" class="TableLabel"/>
										<t:template>
											<Text text="{Category}"/>
										</t:template>
									</t:Column>
									<t:Column>
										<Label text="{i18n>APX}" class="TableLabel"/>
										<t:template>
											<Text text="{Category}"/>
										</t:template>
									</t:Column>
									<t:Column>
										<Label text="{i18n>colour}" class="TableLabel"/>
										<t:template>
											<Text text="{Category}"/>
										</t:template>
									</t:Column>
									<t:Column>
										<Label text="{i18n>status}" class="TableLabel"/>
										<t:template>
											<Text text="{Category}"/>
										</t:template>
									</t:Column>
									<t:Column>
										<Label text="{i18n>audit}" class="TableLabel"/>
										<t:template>
											<Text text="{Category}"/>
										</t:template>
									</t:Column>
									<t:Column>
										<Label text="{i18n>VehTrackNo}" class="TableLabel"/>
										<t:template>
												<Text text="{Category}"/>
										</t:template>
									</t:Column>
									<t:Column>
										<Label text="{i18n>ETAFrom}" class="TableLabel"/>
										<t:template>
												<Text text="{Category}"/>
										</t:template>
									</t:Column>
										<t:Column>
											<Label text="{i18n>ETATime}" class="TableLabel"/>
											<t:template>
													<Text text="{Category}"/>
												</t:template>
											</t:Column>
											<t:Column>
												<Label text="{i18n>linkVehicle}" class="TableLabel"/>
												<t:template>
													<Button text="{i18n>linkVehicle}" press="onLinkVehicle"/>
												</t:template>
											</t:Column>
										</t:columns>
									</t:Table>
								</items>
							</VBox>
							<Dialog draggable="true" id="VTNDialogFleet" title='Search Vehicle By VTN/VIN' contentWidth="400px" contentHeight="260px">
									<content>
										<VBox>
											<items>
												<HBox class="justifyContentCenter">
													<items>
														<Label text="{i18n>vtn}" class="sapUiSmallMarginBegin sapUiSmallMarginTop sapUiSmallMarginEnd"></Label>
														<Input></Input>
													</items>
												</HBox>
												<HBox class="justifyContentCenter">
													<items>
														<Label text="{i18n>or}"></Label>
													</items>
												</HBox>
												<HBox class="justifyContentCenter">
													<items>
														<Label text="{i18n>vin}" class="sapUiSmallMarginBegin sapUiSmallMarginTop sapUiSmallMarginEnd "></Label>
														<Input></Input>
													</items>
												</HBox>
												<HBox class="justifyContentCenter">
													<items>
														<Button text="{i18n>searchLink}"></Button>
													</items>
												</HBox>
											</items>
										</VBox>
									</content>
									<beginButton>
										<Button text="{i18n>Close}" press="closeDialog"></Button>
									</beginButton>
								</Dialog>
						</content>
					</Page>
				</pages>
			</App>
		</mvc:View>