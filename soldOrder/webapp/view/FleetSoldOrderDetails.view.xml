<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:t="sap.ui.table" xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" controllerName="toyota.ca.SoldOrder.controller.FleetSoldOrderDetails" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page showHeader="false">
				<core:Fragment fragmentName="toyota.ca.SoldOrder.view.fragments.ToolHeader" type="XML"/>
				<content>
					<VBox>
						<items>
							<Label id="label_FleetSoldOrderDetalsid" text="{i18n>fleetSoldOrderDetails}"
								class="sapUiTinyMarginTop sapUiTinyMarginBegin sapUiTinyMarginBottom fontsize"></Label>
							<VBox class="marginCorners VBox_color">
								<items>
									<f:SimpleForm columnsL="3" columnsM="3" editable="true" emptySpanL="0" emptySpanM="0" labelSpanL="4" labelSpanM="4"
										layout="ResponsiveGridLayout">
										<f:content>
											<VBox>
												<Label text="{i18n>status}" class="TableLabel">
													<!--	<layoutData>
											<l:GridData span="L2 M12 S12"/>
										</layoutData>-->
												</Label>
												<MultiComboBox width="" id="mcb_status_FSOD" selectionChange="_refresh" items="{ path: '/FSODetails_Status', sorter: { path: 'key' } }">
													<core:Item key="{key}" text="{text}"/>
													<layoutData>
														<l:GridData span="L2 M12 S12"/>
													</layoutData>
												</MultiComboBox>
											</VBox>
											<VBox>
												<Label text="{i18n>OrderType}" class="TableLabel">
													<!--<layoutData>
											<l:GridData span="L2 M12 S12"/>
										</layoutData>-->
												</Label>
												<MultiComboBox id="mcb_ordTyp_FSOD" width="" selectionChange="_refresh" items="{ path: '/FSODetail_OrderType', sorter: { path: 'key' } }">
													<core:Item key="{key}" text="{text}"/>
													<layoutData>
														<l:GridData span="L2 M12 S12"/>
													</layoutData>
												</MultiComboBox>
											</VBox>
											<VBox>
												<Label text="{i18n>auditStatus}" class="TableLabel">
													<!--<layoutData>
											<l:GridData span="L2 M12 S12"/>
										</layoutData>-->
												</Label>
												<MultiComboBox id="mcb_auditStatus_FSOD" width="" selectionChange="_refresh"
													items="{ path: '/FSODetail_AuditStatus', sorter: { path: 'key' } }">
													<core:Item key="{key}" text="{text}"/>
													<layoutData>
														<l:GridData span="L2 M12 S12"/>
													</layoutData>
												</MultiComboBox>
											</VBox>
										</f:content>
									</f:SimpleForm>
									<f:SimpleForm columnsL="2" columnsM="2" editable="true" emptySpanL="0" emptySpanM="0" labelSpanL="3" labelSpanM="3"
										layout="ResponsiveGridLayout" maxContainerCols="2" minWidth="1024">
										<f:content>
											<VBox visible="false">
												<Label text="{i18n>series}" class="TableLabel">
													<!--<layoutData>
											<l:GridData span="L2 M12 S12"/>
										</layoutData>-->
												</Label>
												<MultiComboBox id="mcb_series_FSOD" width="" selectionChange="_refresh" items="{ path: '/Products', sorter: { path: 'key' } }"
													required="true">
													<core:Item key="{key}" text="{Category}"/>
													<layoutData>
														<l:GridData span="L2 M12 S12"/>
													</layoutData>
												</MultiComboBox>
											</VBox>
											<VBox>
												<Label text="{i18n>dealer}" id="lbl_dealer_FSOD" visible="false" class="TableLabel"></Label>
												<MultiComboBox  visible="false" selectionChange="_refresh" items="{ path:'/', sorter: { path: 'key' } }">
													<core:Item key="{key}"
														text="{parts: [{path:'/Products/0/Name'},{path:'/Products/0/Name'}] , formatter: 'toyota.ca.SoldOrder.util.formatter.formatDealer'}"/>
													<layoutData>
														<l:GridData span="L2 M12 S12"/>
													</layoutData>
												</MultiComboBox>
											</VBox>
											<VBox visible="true">
												<Label text="{i18n>dealer}" class="TableLabel"></Label>
												<MultiComboBox width="" id="mcb_dealer_FSOD" visible="true" items="{LoginUserModel>/BpDealerModel}" selectionChange="_refresh"  class="sapUiMediumMarginEnd">
													<core:Item key="{LoginUserModel>BusinessPartnerKey}" text="{parts: [{path:'LoginUserModel>BusinessPartnerKey'},{path:'LoginUserModel>BusinessPartnerName'}],formatter: 'toyota.ca.SoldOrder.util.formatter.formatdealers'}"/>
													<layoutData>
														<l:GridData span="L2 M12 S12"/>
													</layoutData>
												</MultiComboBox>
											</VBox>
										</f:content>
									</f:SimpleForm>
								</items>
							</VBox>
							<t:Table id="tbl_FSOD" selectionMode="None" rows="{mainservices>/Retail_Sold_OrderSet}" enableColumnReordering="false"
								alternateRowColors="true" enableColumnFreeze="false" class="marginCorners marginCornersBottom" visibleRowCount="10">
								<t:columns>
									<t:Column width="8.3%" sortProperty="Category" resizable="false">
										<Label text="{i18n>orderNum}" class="TableLabel"/>
										<t:template>
											<Link text="{mainservices>ZzsoReqNo}" press="_navToRSO"/>
										</t:template>
									</t:Column>
									<t:Column width="8.3%" resizable="false">
										<Label text="{i18n>dealer}" class="TableLabel"/>
										<t:template>
											<Text id="tbl_val_dealer_FSOD" visible="true" text="{path:'mainservices>ZzdealerCode',formatter: 'toyota.ca.SoldOrder.util.formatter.formatdealerno'}"/>
											<!--, formatter: 'toyota.ca.SoldOrder.util.formatter.formatDealer'-->
										</t:template>
									</t:Column>
									<t:Column width="8.3%" resizable="false">
										<Label text="{i18n>model}" class="TableLabel"/>
										<t:template>
											<Text text="{mainservices>Zzmodel}"/>
										</t:template>
									</t:Column>
									<t:Column width="8.3%" resizable="false">
										<Label text="{i18n>Suffix}" class="TableLabel"/>
										<t:template>
											<Text text="{mainservices>Zzsuffix}"/>
										</t:template>
									</t:Column>
									<t:Column width="8.3%" resizable="false">
										<Label text="{i18n>APX}" class="TableLabel"/>
										<t:template>
											<Text text="{mainservices>Zzapx}"/>
										</t:template>
									</t:Column>
									<t:Column width="8.3%" resizable="false">
										<Label text="{i18n>colour}" class="TableLabel"/>
										<t:template>
											<Text text="{mainservices>Zzextcol}"/>
										</t:template>
									</t:Column>
									<t:Column width="8.3%" resizable="false">
										<Label text="{i18n>status}" class="TableLabel"/>
										<t:template>
											<Text text="{mainservices>ZzsoStatus}"/>
										</t:template>
									</t:Column>
									<t:Column width="8.3%" resizable="false">
										<Label text="{i18n>audit}" class="TableLabel"/>
										<t:template>
											<Text text="{mainservices>ZzAuditStatus}"/>
										</t:template>
									</t:Column>
									<t:Column width="8.3%" resizable="false">
										<Label text="{i18n>VehTrackNo}" class="TableLabel"/>
										<t:template>
											<Text text="{mainservices>Zzvtn}"/>
										</t:template>
									</t:Column>
									<t:Column width="8.3%" resizable="false">
										<Label text="{i18n>ETAFrom}" class="TableLabel"/>
										<t:template>
											<Text
												text="{path:'mainservices>ZzreqEtaFrom',type:'sap.ui.model.type.DateTime', formatOptions: { pattern: 'yyyy-MM-dd', strictParsing: false, relative: false }}"/>
										</t:template>
									</t:Column>
									<t:Column width="8.3%" resizable="false">
										<Label text="{i18n>ETATime}" class="TableLabel"/>
										<t:template>
											<Text
												text="{path:'mainservices>ZzreqEtaTo', type:'sap.ui.model.type.DateTime', formatOptions: { pattern: 'yyyy-MM-dd', strictParsing: false, relative: false }}"/>
										</t:template>
									</t:Column>
									<t:Column width="8.3%" resizable="false">
										<Label text="{i18n>linkVehicle}" class="TableLabel"/>
										<t:template>
											<Button text="{i18n>linkVehicle}" visible="{path:'mainservices>Zzvtn',formatter:'.formatter.linkvehicle'}"
												enabled="{path:'LoginUserModel>/UserType',formatter:'toyota.ca.SoldOrder.util.formatter.Dealerusertype'}" id="btn_linkVeh_FSOD"
												press="onLinkVehicle"/>
										</t:template>
									</t:Column>
								</t:columns>
							</t:Table>
						</items>
					</VBox>
					<!--<Dialog draggable="true" id="VTNDialog_FSOD" title='Search Vehicle By VTN/VIN' contentWidth="400px" contentHeight="260px">
						<content>
							<VBox>
								<items>
									<HBox class="justifyContentCenter">
										<items>
											<Label id="vin_FSOD" text="{i18n>vtn}" class="sapUiSmallMarginBegin sapUiSmallMarginTop sapUiSmallMarginEnd"></Label>
											<Input></Input>
										</items>
									</HBox>
									<HBox class="justifyContentCenter">
										<items>
											<Label text="{i18n>or}"></Label>
										</items>
									</HBox>
									<HBox class="justifyContentCenter">
										<items>
											<Label id="vtin_FSOD" text="{i18n>vin}" class="sapUiSmallMarginBegin sapUiSmallMarginTop sapUiSmallMarginEnd "></Label>
											<Input></Input>
										</items>
									</HBox>
									<HBox class="justifyContentCenter">
										<items>
											<Button text="{i18n>searchLink}" press="_searchNLink"></Button>
										</items>
									</HBox>
								</items>
							</VBox>
						</content>
						<beginButton>
							<Button text="{i18n>Close}" press="closeDialog"></Button>
						</beginButton>
					</Dialog>-->
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>