<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.ui.layout.form"
	controllerName="toyota.ca.SoldOrder.controller.SoldOrderChangeReason" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page >
				<customHeader>
					<Bar class="sapUiSmallPaddingBeginEnd clCustomHeaderBg">
						<contentLeft>
							<Image id="idLexusLogo" src="images/Lexus_EN.png" width="100px"/>
							<Text text="|" class="sapUiTinyMarginBeginEnd"/>
							<Text class="clCustomFont" text="{i18n>PageTitle}"/>
						</contentLeft>
						<contentRight>
							<Text text="{i18n>soldOrder}" class="sapUiTinyMarginBeginEnd"></Text>
							<Text text="{i18n>priceProtection}" class="sapUiTinyMarginBeginEnd"></Text>
							<!--	<Text text="{i18n>summary}" class="sapUiTinyMarginBeginEnd"></Text>-->
						</contentRight>
					</Bar>
				</customHeader>
				<content>
					<Label id="label_SoldOrderid" text="" class="sapUiTinyMarginTop sapUiTinyMarginBegin fontsize"></Label>
					<VBox class="VBox_color marginCorners" width="49%">
						<items>
					<Text text="{i18n>disclaimer2}" class="sapUiMediumMarginBegin sapUiSmallMarginBottom fontsizeIn wrapwidth"></Text>
					<f:SimpleForm id="simpleFormChange" editable="true" width="90%" layout="ResponsiveLayout">
						<f:content>
							<Label text="{i18n>ReasonChange}"/>
							<ComboBox id="resonCancelId" items="{ path: '/CancellationReason', sorter: { path: 'key' } }" required="true">
								<core:Item key="{key}" text="{text}"/>
							</ComboBox>
							<Label text="{i18n>Comments}"/>
							<TextArea maxLength="150"/>
							<Label text="{i18n>ReqType}"/>
							<ComboBox id="reqTypeId" items="{ path: '/RequestType', sorter: { path: 'key' } }" required="true">
								<core:Item key="{key}" text="{text}"/>
							</ComboBox>
							<Label text=""/>
							<Button text="{i18n>submit}" type="Emphasized" press="UpdateSoldOrderRequest"></Button>
							<Button text="{i18n>Back}" press="onBack"></Button>
						</f:content>
					</f:SimpleForm>
						</items>
					</VBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>