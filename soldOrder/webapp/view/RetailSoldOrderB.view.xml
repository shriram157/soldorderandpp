<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:u="sap.ui.unified" xmlns:f="sap.ui.layout.form"
	controllerName="toyota.ca.SoldOrder.controller.RetailSoldOrderB" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="Create sold Order Request B">
				<customHeader>
					<Bar class="sapUiSmallPaddingBeginEnd clCustomHeaderBg">
						<contentLeft>
							<Image id="idLexusLogo" src="images/Lexus_EN.png" width="100px"/>
							<Text text="|" class="sapUiTinyMarginBeginEnd"/>
							<Text class="clCustomFont" text="{i18n>PageTitle}"/>
						</contentLeft>
						<contentRight>
							<Text text="{i18n>soldOrder}" class="sapUiTinyMarginBeginEnd"></Text>
							<Text text="{i18n>priceProtection}" class="sapUiTinyMarginBeginEnd"></Text>
							<!--	<Text text="{i18n>summary}" class="sapUiTinyMarginBeginEnd"></Text>-->
						</contentRight>
					</Bar>
				</customHeader>
				<content>
					<Label text="{i18n>createSoldOrderTitle}" class="sapUiTinyMarginTop sapUiSmallMarginBegin fontsize"></Label>
					<HBox class="marginCorners">
						<items>
							<VBox width="100%">
								<items>
									<MessageStrip text="{i18n>VehicleInformation}" class="msgStripCss marginCornersRight"></MessageStrip >
									<f:SimpleForm id="simpleFormChange" editable="true" width="100%" layout="ResponsiveLayout" class="heightcss">
										<f:content >
											<Label text="{i18n>modelYear}"/>
											<Text text="1980"/>
											<Label text="{i18n>Series}"/>
											<Text text="{address>/Name}"/>
											<Label text="{i18n>Model}"/>
											<Text text="{parts: [{path:'/Products/0/Name'},{path:'/Products/0/Name'}] , formatter: 'toyota.ca.SoldOrder.util.formatter.formatModel'}"/>
											<Label text="{i18n>Suffix}"/>
											<Text text="{parts: [{path:'/Products/0/Name'},{path:'/Products/0/Name'}] , formatter: 'toyota.ca.SoldOrder.util.formatter.formatSuffix'}"/>
											<Label text="{i18n>APX}"/>
											<Text text="{address>/Name}"/>
											<Label text="{i18n>Color}"/>
											<Text text="{address>/Name}"/>
											<Label text="{i18n>vtn}" required="true"/>
											<Text text="{address>/Name}"/>
										</f:content>
									</f:SimpleForm>
									<MessageStrip text="{i18n>CustomerInformation}" class="msgStripCss marginCornersRight"></MessageStrip >
									<f:SimpleForm id="simpleFormChange2" editable="true" width="100%" layout="ResponsiveLayout">
										<f:content>
											<Label text="{i18n>custname}"/>
											<Input id="CustName_RSOB" value="{address>/Name}" required="true"/>
											<Label text="{i18n>address}"/>
											<Input id="Address_RSOB" value="{address>/Street}" required="true"/>
											<Label text="{i18n>city}"/>
											<Input id="City_RSOB" value="{address>/HouseNumber}" required="true"/>
											<Label text="{i18n>province}"/>
											<ComboBox id="Province_RSOB" items="{ path: '/ProductCollection', sorter: { path: 'reason' } }" required="true">
												<core:Item key="{ProductId}" text="{Name}"/>
											</ComboBox>
											<Label text="{i18n>postalcode}"/>
											<Input id="PostalCode_RSOB" value="560076" required="true"/>
											<Label text="{i18n>phnNo}"/>
											<Input value="{address>/City}"/>
											<Label text="{i18n>email}"/>
											<Input value="{address>/City}"/>
											<Label text="{i18n>driverLic}"/>
											<Input id="License_RSOB" value="{address>/City}" required="true"/>
										</f:content>
									</f:SimpleForm>
									<Button text="{i18n>valCust}" class="cssShift" press="onValidateCustomer"></Button>
								</items>
							</VBox>
							<VBox width="100%">
								<items>
									<MessageStrip text="{i18n>AdditionalInformation}" class="msgStripCss marginCornersLeft"></MessageStrip >
									<f:SimpleForm id="simpleFormChange3" editable="true" width="100%" layout="ResponsiveLayout">
										<f:content>
											<Label text="{i18n>contractDate}"/>
											<DatePicker id="ContractDate_RSOB" placeholder="dd/MMM/yy" required="true"></DatePicker>
											<Label text="{i18n>salesType}"/>
											<ComboBox id="SalesType_RSOB" items="{ path: '/SalesType', sorter: { path: 'key' } }" required="true">
												<core:Item key="{key}" text="{text}"/>
											</ComboBox>
											<Label text="{i18n>approvalNumber}"/>
											<Input value="{address>/Street}"/>
											<Label text="{i18n>salesPerName}"/>
											<Input value="{address>/HouseNumber}"/>
											<Label text="{i18n>salesManName}"/>
											<Input value="{address>/ZIPCode}"/>
											<Label text="{i18n>tradeInModelYr}"/>
											<ComboBox items="{ path: '/ProductCollection', sorter: { path: 'reason' } }">
												<core:Item key="{ProductId}" text="{Name}"/>
											</ComboBox>
											<Label text="{i18n>tradeInMake}"/>
											<ComboBox items="{ path: '/ProductCollection', sorter: { path: 'reason' } }">
												<core:Item key="{ProductId}" text="{Name}"/>
											</ComboBox>
											<Label text="{i18n>tradeInModel}"/>
											<Input value="{address>/City}"/>
										</f:content>
									</f:SimpleForm>
									<MessageStrip text="{i18n>Comments}" class="msgStripCss marginCornersLeft"></MessageStrip >
									<f:SimpleForm id="simpleFormChange4" editable="true" width="100%" layout="ResponsiveLayout">
										<f:content>
											<Label text="{i18n>Comments}"/>
											<TextArea/>
											<!--maxLength="150"-->
										</f:content>
									</f:SimpleForm>
								</items>
							</VBox>
						</items>
					</HBox>
					<Button text="{i18n>submit}" type="Emphasized" class="marginCornersRight marginCornersBottom cssShift"></Button>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>