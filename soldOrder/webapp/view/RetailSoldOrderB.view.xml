<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:u="sap.ui.unified" xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout" controllerName="toyota.ca.SoldOrder.controller.RetailSoldOrderB" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page showHeader="false">
				<core:Fragment fragmentName="toyota.ca.SoldOrder.view.fragments.ToolHeader" type="XML"/>
				<content>
					<Label text="{i18n>createSoldOrderTitle}" class="sapUiTinyMarginTop sapUiSmallMarginBegin fontsize"></Label>
					<f:SimpleForm class="FormTitle" id="form1_RSOB" editable="true" title="" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12"
						adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2"
						singleContainerFullSize="false">
						<f:content>
							<core:Title text=""/>
							<MessageStrip text="{i18n>VehicleInformation}" class="msgStripFormat msgStripCss "></MessageStrip >
							<Label wrapping="true"  text="{i18n>modelYear}"/>
							<Text text="1980"/>
							<Label wrapping="true"  text="{i18n>Series}"/>
							<Text text="{address>/Name}"/>
							<Label wrapping="true"  text="{i18n>Model}"/>
							<Text text="{parts: [{path:'/Products/0/Name'},{path:'/Products/0/Name'}] , formatter: 'toyota.ca.SoldOrder.util.formatter.formatModel'}"/>
							<Label wrapping="true"  text="{i18n>Suffix}"/>
							<Text text="{parts: [{path:'/Products/0/Name'},{path:'/Products/0/Name'}] , formatter: 'toyota.ca.SoldOrder.util.formatter.formatSuffix'}"/>
							<Label wrapping="true"  text="{i18n>APX}"/>
							<Text text="{address>/Name}"/>
							<Label wrapping="true"  text="{i18n>Color}"/>
							<Text text="{address>/Name}"/>
							<Label wrapping="true"  text="{i18n>vtn}" required="true"/>
							<Text text="{address>/Name}"/>
							<core:Title text=""/>
							<MessageStrip text="{i18n>AdditionalInformation}" class="msgStripFormat msgStripCss"></MessageStrip >
							<Label wrapping="true"  text="{i18n>contractDate}"/>
							<DatePicker id="ContractDate_RSOB" placeholder="dd/MMM/yy" required="true"></DatePicker>
							<Label wrapping="true"  text="{i18n>salesType}"/>
							<ComboBox id="SalesType_RSOB" items="{ path: '/SalesType', sorter: { path: 'key' } }" required="true">
								<core:Item key="{key}" text="{text}"/>
							</ComboBox>
							<Label wrapping="true"  text="{i18n>approvalNumber}"/>
							<Input value="{address>/Street}"/>
							<Label wrapping="true"  text="{i18n>salesPerName}"/>
							<Input value="{address>/HouseNumber}"/>
							<Label wrapping="true"  text="{i18n>salesManName}"/>
							<Input value="{address>/ZIPCode}"/>
							<Label wrapping="true"  text="{i18n>tradeInModelYr}"/>
							<ComboBox items="{ path: '/ProductCollection', sorter: { path: 'reason' } }">
								<core:Item key="{ProductId}" text="{Name}"/>
							</ComboBox>
							<Label wrapping="true"  text="{i18n>tradeInMake}"/>
							<ComboBox items="{ path: '/ProductCollection', sorter: { path: 'reason' } }">
								<core:Item key="{ProductId}" text="{Name}"/>
							</ComboBox>
							<Label wrapping="true"  text="{i18n>tradeInModel}"/>
							<Input value="{address>/City}"/>
							
						</f:content>
					</f:SimpleForm>
					<f:SimpleForm class="FormTitle"  id="form2_RSOB" title="" editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12"
						adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2"
						singleContainerFullSize="false">
						<f:content>
							<core:Title text=""/>
							<MessageStrip text="{i18n>CustomerInformation}" class="msgStripFormat msgStripCss"></MessageStrip >
							<Label wrapping="true"  text="{i18n>custname}"/>
							<Input id="CustName_RSOB" value="{address>/Name}" required="true"/>
							<Label wrapping="true"  text="{i18n>address}"/>
							<Input id="Address_RSOB" value="{address>/Street}" required="true"/>
							<Label wrapping="true"  text="{i18n>city}"/>
							<Input id="City_RSOB" value="{address>/HouseNumber}" required="true"/>
							<Label wrapping="true"  text="{i18n>province}"/>
							<ComboBox id="Province_RSOB" items="{ path: '/ProductCollection', sorter: { path: 'reason' } }" required="true">
								<core:Item key="{ProductId}" text="{Name}"/>
							</ComboBox>
							<Label wrapping="true"  text="{i18n>postalcode}"/>
							<Input id="PostalCode_RSOB" value="560076" required="true"/>
							<Label wrapping="true"  text="{i18n>phnNo}"/>
							<Input value="{address>/City}"/>
							<Label wrapping="true"  text="{i18n>email}"/>
							<Input value="{address>/City}"/>
							<Label wrapping="true"  text="{i18n>driverLic}"/>
							<Input id="License_RSOB" value="{address>/City}" required="true"/>
							<Label wrapping="true"  text=""/>
							<Button text="{i18n>valCust}" press="onValidateCustomer">
								<layoutData>
									<l:GridData span="L4 M8 S12" indent="L4 M4"/>
								</layoutData>
							</Button>
							<core:Title text=""/>
							<MessageStrip text="{i18n>Comments}" class="msgStripFormat msgStripCss"></MessageStrip >
							<Label wrapping="true"  text="{i18n>Comments}"/>
							<TextArea value="{address>/Name}"/>
						</f:content>
					</f:SimpleForm>
					<Button text="{i18n>submit}" type="Emphasized" class="marginCornersRight marginCornersBottom cssShift" press="_onSubmit"></Button>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>

