<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:u="sap.ui.unified"
	xmlns:f="sap.ui.layout.form" xmlns:t="sap.ui.table" controllerName="toyota.ca.SoldOrder.controller.InventoryVehicleSelection"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page showHeader="false">
				<core:Fragment fragmentName="toyota.ca.SoldOrder.view.fragments.ToolHeader" type="XML"/>
				<content>
					<VBox >
						
						<items>
						<ComboBox visible="false" placeholder="{i18n>placeholder_select}" class="sapUiTinyMarginTop sapUiLargeMarginBegin" selectionChange="filter_change" width="30%" >
								<core:Item key="1" text="{i18n>inventorys}"/>
								<!--<core:Item key="2" text="{i18n>nationals}"/>-->
							</ComboBox>		
					<Label text="{i18n>SOVehicleSel}" class="sapUiSmallMarginBegin sapUiSmallMarginTop sapUiMediumMarginBottom fontsize"></Label>		
					<HBox class="justifyContentSpaceBetween">
						<items>
					<Label text="{i18n>myStockPipelineVeh}" class="sapUiSmallMarginBegin sapUiMediumMarginBottom fontsize"></Label>
					<Button text="{i18n>Select}" press="_onSelect" class="sapUiSmallMarginEnd"></Button>		
						</items>
					</HBox>
						</items>
					</VBox>
					
					
					<t:Table id="idFSO_IVS_Table" rows="{mainservices>/InventoryDetailsSet}" enableColumnReordering="false" alternateRowColors="true" enableColumnFreeze="false"
						class="marginCorners marginCornersBottom">
						<t:columns>
						<t:Column width="11.11%" resizable="false">
								<Label text="{i18n>series}" class="TableLabel"/>
								<t:template>
									<Text text="{mainservices>TCISeries}"/>
								</t:template>
							</t:Column>
							<t:Column width="11.11%" resizable="false">
								<Label text="{i18n>modelYear}" class="TableLabel"/>
								<t:template>
									<Text text="{mainservices>Modelyear}"/>
								</t:template>
							</t:Column>
							<t:Column width="13.11%" resizable="false">
								<Label text="{i18n>VehTrackNo}" class="TableLabel"/>
								<t:template>
									<Text text="{mainservices>ZZVTN}"/>
								</t:template>
							</t:Column>
							<t:Column width="11.11%" resizable="false" sortProperty="Category">
								<Label text="{i18n>orderNumber}" class="TableLabel"/>
								<t:template>
									<Text text="{mainservices>ZZDLR_REF_NO}"/>
								</t:template>
							</t:Column>
							<t:Column width="11.11%" resizable="false" sortProperty="Category">
								<Label text="{i18n>model}" class="TableLabel"/>
								<t:template>
								<!--	<Text text="{Category}"/>-->
									<Text text="{parts: [{path:'mainservices>Model'},{path:'mainservices>MODEL_DESC_EN'}] , formatter: 'toyota.ca.SoldOrder.util.formatter.formatModel'}"/>
								</t:template>
							</t:Column>
							<t:Column width="11.11%" sortProperty="Category" resizable="false">
								<Label text="{i18n>suffix}" class="TableLabel"/>
								<t:template>
									<Text text="{parts: [{path:'mainservices>Suffix'},{path:'mainservices>SUFFIX_DESC_EN'}] , formatter: 'toyota.ca.SoldOrder.util.formatter.formatSuffix'}"/>
								</t:template>
							</t:Column>
								<t:Column width="9.11%" resizable="false">
								<Label text="{i18n>APX}" class="TableLabel"/>
								<t:template>
									<Text text="{mainservices>APX}"/>
								</t:template>
							</t:Column>
							<t:Column width="11.11%" resizable="false">
								<Label text="{i18n>colour}" class="TableLabel"/>
								<t:template>
									<Text text="{parts: [{path:'mainservices>ExteriorColorCode'},{path:'mainservices>INTCOL_DESC_EN'}] , formatter: 'toyota.ca.SoldOrder.util.formatter.formatColour'}"/>
								</t:template>
							</t:Column>
							<t:Column width="11.11%" resizable="false">
								<Label text="{i18n>status}" class="TableLabel"/>
								<t:template>
									<Text text="{mainservices>ZMMSTA}"/>
								</t:template>
							</t:Column>
								</t:columns>
						</t:Table>
				</content>
					<footer class="sitefooter">
					<Toolbar>
						<ToolbarSpacer/>
						<!--<Button text="{i18n>Back}" class="sapUiTinyMarginTop sapUiLargeMarginBegin" type="Emphasized" press="onback"></Button>-->
					</Toolbar>
				</footer>
				</Page>
			</pages>
		</App>
	</mvc:View>