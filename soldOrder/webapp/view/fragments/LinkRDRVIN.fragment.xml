<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:tnt="sap.tnt">
	<Dialog title="LINK RDR VIN" contentWidth="50%" contentHeight="50%">
	<content>
		<f:SimpleForm>
			<f:content>
				<VBox>
				<HBox>
					<items>
						<Label text="{i18n>Providelast8CharacterofVIN}" required="true" class="sapUiSmallMarginBegin sapUiSmallMarginTop sapUiSmallMarginEnd"></Label>
						<Input id="rdrvin" maxLength="8" value="" placeholder="Enter here"/>
					</items>
						<Button text="{i18n>ValidateVIN}" press="_validateVIN" class="sapUiSmallMarginBegin">
							<layoutData>
								<l:GridData span="L2"/>
							</layoutData>
						</Button>
				</HBox>
				<HBox id="idrdr_date" visible="false">
					<items>
						<Label text="{i18n>RDRDate}" required="true" class="sapUiSmallMarginBegin sapUiSmallMarginTop sapUiSmallMarginEnd"></Label>
						<Text text="{path:'SimulatePriceModel>/rdr_date'}" class="sapUiSmallMarginTop"/>
					</items>	
				</HBox>
				<HBox id="idrdrcustname" visible="false">
					<items>
						<Label text="{i18n>RDRCustName}" required="true" class="sapUiSmallMarginBegin sapUiSmallMarginTop sapUiSmallMarginEnd"></Label>
						<Text text="{path:'SimulatePriceModel>/rdr_customer'}" class="sapUiSmallMarginTop"/>
					</items>	
				</HBox>
				<HBox id="iderrmsg" visible="false">
					<items>
						<Label text="{i18n>ErrMsg}" required="true" class="sapUiSmallMarginBegin sapUiSmallMarginTop sapUiSmallMarginEnd"></Label>
						<Text  text="{path:'SimulatePriceModel>/msg_flag}" class="sapUiSmallMarginTop"/>
					</items>	
				</HBox>
				</VBox>
			</f:content>
	</f:SimpleForm>
	</content>
	<endButton>
			<Button text="Close" press="onCloseDialog"></Button>
	</endButton>
	</Dialog>
</core:FragmentDefinition>



