<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:t="sap.ui.table" xmlns:l="sap.ui.layout" xmlns="sap.m"
xmlns:tnt="sap.tnt">
	<Dialog title="{i18n>CancelPP}"contentWidth="50%" contentHeight="30%">
		<content>
			<VBox>
				<f:SimpleForm>
					<f:content>
						<VBox>
							<items>
								<HBox>
									<items>
										<Label text="{i18n>CancelPPDesc}"  class="sapUiSmallMarginTop sapUiSmallMarginBegin"/>
										<Text/>
									</items>
								</HBox>
								<HBox>
									<items>
										<Button text="{i18n>Yes}" press="onclickCancelPPYes" class="sapUiSmallMarginBegin sapUiSmallMarginTop">
										<layoutData>
											<l:GridData span="S2"/>
										</layoutData>
										</Button>
										<Button text="{i18n>No}" press="onclickCancelPPNo" class="sapuiMediumMarginBegin sapUiSmallMarginTop">
										<layoutData>
											<l:GridData span="S2"/>
										</layoutData>
										</Button>
									</items>
								</HBox>
							</items>
						</VBox>
					</f:content>
				</f:SimpleForm>
			</VBox>
		</content>
		
	</Dialog>
</core:FragmentDefinition>