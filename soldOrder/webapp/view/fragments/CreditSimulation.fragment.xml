<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:t="sap.ui.table" xmlns:l="sap.ui.layout" xmlns="sap.m"
	xmlns:tnt="sap.tnt">
	<Dialog title="Credit Simulation" contentWidth="30%" contentHeight="100%">
		<content>
			<VBox>
				<f:SimpleForm id="s1">
					<f:content>
						<VBox>
							<items>
								<HBox>
									<items>
										<!--<Text/>-->
										<Label text="{i18n>SOCreated}"  class="sapUiSmallMarginTop sapUiSmallMarginBegin" width="12rem"></Label>
										<Text text="{path:'SimulatePriceModel>/results/0/SO_CREATION_DATE',formatter:'toyota.ca.SoldOrder.util.formatter._PriceDateFomatter'}"/>
									</items>
								</HBox>
							</items>
						</VBox>
					</f:content>
				</f:SimpleForm>
				<Table id="t1" items="{path:'SimulatePriceModel>/results'}" inset="false" class="sapUiSmallMarginBegin sapUiSmallMarginEnd" width="90%">
					<columns>
						<!--	<Column width="12em">-->
						<!--	<Label text=""/>-->
						<!--</Column>-->
						<Column width="12em">
							<Label text="{i18n>EffectiveDate}"/>
						</Column>
						<Column width="8em">
							<Label text="{i18n>CreditAmount}"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<!--<Text text="{SimulatePriceModel>EFFET_DATE}"/>-->
								<Text text="{path:'SimulatePriceModel>EFFET_DATE',formatter:'toyota.ca.SoldOrder.util.formatter._PriceDateFomatter'}"/>
								<Text text="{SimulatePriceModel>CREDIT_AMOUNT}"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
				<f:SimpleForm id="s2">
					<f:content>
						<VBox>
							<items>
								<HBox>
									<items>
										<!--<Text/>-->
										<Label wrapping="true" text="{i18n>VIN}" class="sapUiSmallMarginTop sapUiSmallMarginBegin" width="12rem"/>
										<Text id="idVhin" text="{path:'SimulatePriceModel>/results/0/Vhvin'}" class="sapUiSmallMarginTop"/>
									</items>
								</HBox>
								<HBox>
									<items>
										<!--<Text/>-->
										<Label wrapping="true" text="{i18n>VehicleWholesaleDate}" class="sapUiSmallMarginTop sapUiSmallMarginBegin" width="12rem"/>
										<Text text="{path:'SimulatePriceModel>/results/0/WHOLESALE_DATE',formatter:'toyota.ca.SoldOrder.util.formatter._PriceDateFomatter'}"
											class="sapUiSmallMarginTop"/>
									</items>
								</HBox>
								<HBox>
									<items>
										<!--<Text/>-->
										<Label wrapping="true" text="{i18n>EligibleClaim}" class="sapUiSmallMarginTop sapUiSmallMarginBegin" width="12rem"/>
										<Text id="idTotal" text="{path:'SimulatePriceModel>/results/0/TOTAL'}" class="sapUiSmallMarginTop"/>
									</items>
								</HBox>
							</items>
						</VBox>
					</f:content>
				</f:SimpleForm>
			</VBox>
		</content>
		<endButton>
			<Button text="Close" press="onCloseSDialog"></Button>
		</endButton>
	</Dialog>
</core:FragmentDefinition>