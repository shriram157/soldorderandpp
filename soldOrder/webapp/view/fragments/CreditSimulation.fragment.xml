<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:t="sap.ui.table" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:tnt="sap.tnt">
	<Dialog title="Credit Simulation">
		<f:SimpleForm editable="true" layout="ResponsiveGridLayout">
			<f:content>
				<Label text="{i18n>SOCreated}"></Label>
				<Text text="{mainservices>SO_CREATION_DATE}"/> 
			</f:content>
		</f:SimpleForm>
		<Table id="SimulateTable" inset="false" items="{ path: 'mainservices>/items', sorter: { path: 'Type', descending:true } }">
		<columns>
			<Column
				width="12em">
				<Text text="Effective Date" />
			</Column>
			<Column
				width="12em">
				<Text text="Credit Amount" />
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{mainservices>EFFET_DATE}"/>
					<Text text="{mainservices>CREDIT_AMOUNT}"/>
				</cells>
			</ColumnListItem>
		</items>	
		</Table>
		<endButton>
			<Button text="Close" press="onClose"></Button>
		</endButton>
	</Dialog>
</core:FragmentDefinition>
